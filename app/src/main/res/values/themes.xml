<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.WorldData" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/blue_light</item>
		<item name="colorPrimaryVariant">@color/blue_light_plus</item>
		<item name="colorOnPrimary">@color/white</item>

		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/green_light</item>
		<item name="colorSecondaryVariant">@color/green_light_plus</item>
		<item name="colorOnSecondary">@color/black</item>

		<item name="colorOnSurface">@color/gray_93</item>
		<item name="colorOnSurfaceEmphasisHigh">@color/gray_93_alpha_83</item>
		<item name="colorOnSurfaceEmphasisMedium">@color/gray_93_alpha_65</item>
		<item name="colorOnSurfaceEmphasisLow">@color/gray_93_alpha_45</item>

		<item name="colorDefaultComponent">@color/gray_12</item>

		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimary</item>


		<!-- Text appearance -->
		<item name="textAppearanceHeadline4">@style/TextAppearance.Headline4</item>
		<item name="textAppearanceSubtitle2">@style/TextAppearance.Subtitle2</item>
		<item name="textAppearanceBody1">@style/TextAppearance.Body1</item>
	</style>
</resources>